generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id                    Int      @id @default(autoincrement())
  riotId                String   @unique
  shop                  Json?
  shopRegion            String   @default("eu")
  lastShopUpdate        DateTime @default(now())
  nightMarket           Json?
  nightMarketRegion     String   @default("eu")
  lastNightMarketUpdate DateTime @default(now())
  tokens                Token[]

  @@map("users")
}

model Token {
  id      Int      @id @default(autoincrement())
  token   String   @db.VarChar(1000)
  riotId  String
  user    User     @relation(fields: [riotId], references: [riotId])
  created DateTime @default(now())

  @@map("tokens")
}
